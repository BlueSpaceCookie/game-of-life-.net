<Window x:Class="GameOfLife.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="Game Of Life" Height="450" Width="800">
    <Grid>
        <!--<Canvas x:Name="grid" Margin="10,60,10,10"></Canvas>-->
        <Grid x:Name="grid" Margin="10,60,10,10"></Grid>
        <Button x:Name="playButton" Content="Play" HorizontalAlignment="Left" Margin="423,23,0,0" VerticalAlignment="Top" Click="PlayClick" RenderTransformOrigin="0.509,0.524"/>
        <Button x:Name="pauseButton" Content="Pause" HorizontalAlignment="Left" Margin="340,23,0,0" VerticalAlignment="Top" Click="PauseClick"/>
        <Button x:Name="resetButton" Content="Reset" HorizontalAlignment="Left" Margin="486,23,0,0" VerticalAlignment="Top" Click="ResetClick"/>
    </Grid>
</Window>
