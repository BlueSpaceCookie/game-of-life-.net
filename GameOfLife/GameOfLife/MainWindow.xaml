<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="GameOfLife" Height="200" Width="200"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Taille de la grille" HorizontalAlignment="Center" Margin="0,6,0,0" VerticalAlignment="Top" Height="28"/>
        <RadioButton x:Name="aSize"  Content="10x10" Margin="68,34,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50"/>
        <RadioButton x:Name="bSize" Content="50x50" Margin="68,54,0,0" VerticalAlignment="Top" IsChecked="True" HorizontalAlignment="Left" Width="50"/>
        <RadioButton x:Name="cSize" Content="100x100" HorizontalAlignment="Center" Margin="0,74,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="dSize" Content="150x150" HorizontalAlignment="Center" Margin="0,94,0,0" VerticalAlignment="Top"/>
        <Button Content="Play" HorizontalAlignment="Center" Margin="0,123,0,0" VerticalAlignment="Top" Width="114" Click="Play_Click" Height="26"/>
    </Grid>
</Window>
